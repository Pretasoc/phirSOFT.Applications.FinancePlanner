<fluent:RibbonWindow x:Class="FinancePlanner.Views.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:prism="http://prismlibrary.com/"
                     xmlns:fluent="urn:fluent-ribbon"
                     xmlns:shared="clr-namespace:phirSOFT.Applications.FinancePlanner;assembly=Shared"
                     prism:ViewModelLocator.AutoWireViewModel="True"
                     Title="{Binding Title}" Height="350" Width="525">
    <Grid>
        <fluent:Ribbon>
            <fluent:Ribbon.Menu>
                <fluent:Backstage prism:RegionManager.RegionName="{x:Static shared:RegionNames.ShellApplicationMenu}">
                    
                </fluent:Backstage>
            </fluent:Ribbon.Menu>
        </fluent:Ribbon>
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />

        <fluent:StatusBar VerticalAlignment="Bottom" prism:RegionManager.RegionName="{x:Static shared:RegionNames.ShellStatusBar}">
            
        </fluent:StatusBar>
    </Grid>
</fluent:RibbonWindow>
